# Immich Environment Configuration
# Copy this file to .env and update with your values

# Immich Version
IMMICH_VERSION=release

# Application Ports  
IMMICH_PORT=2283

# Data Paths - adjust to your setup
BASE_CONFIG_PATH=/opt/docker/config
BASE_DATA_PATH=/opt/docker/data

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_USER=immich
POSTGRES_DB=immich

# Nginx Proxy Configuration for Large Uploads
NGINX_CLIENT_MAX_BODY_SIZE=50000M
NGINX_PROXY_READ_TIMEOUT=600s
NGINX_PROXY_SEND_TIMEOUT=600s

# Access via nginx-proxy + dnsmasq:
# - Local: immich.home  
# - Tailscale: http://server-tailscale-ip:2283 (direct access)
# No external internet access - internal network only 