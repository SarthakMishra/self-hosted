# {{ ansible_managed }}
# System Log Rotation Configuration
# Generated by Ansible logging role

/var/log/syslog {
    daily
    rotate {{ log_retention_days }}
    compress
    delaycompress
    missingok
    notifempty
    create 0644 syslog adm
    su syslog adm
}

/var/log/auth.log {
    daily
    rotate {{ log_retention_days }}
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root adm
    su root adm
} 