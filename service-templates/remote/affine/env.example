# Affine Workspace Configuration

# === DOMAIN ===
AFFINE_DOMAIN=affine.example.com

# Options: stable, canary
AFFINE_REVISION=stable

# === DATABASE ===
POSTGRES_DB=affine
POSTGRES_USER=affine
POSTGRES_PASSWORD=changeme
POSTGRES_INITDB_ARGS=--data-checksums --encoding=UTF-8 --lc-collate=C --lc-ctype=C

# === REDIS ===
REDIS_PASSWORD=changeme

# === SECURITY ===
# Generate with: openssl rand -hex 32
AFFINE_SECRET=changeme
AFFINE_JWT_SECRET=changeme

# === FEATURES ===
AFFINE_INDEXER_ENABLED=false
AFFINE_TELEMETRY_ENABLED=false

# === EMAIL (OPTIONAL) ===
AFFINE_MAILER_HOST=smtp.example.com
AFFINE_MAILER_PORT=587
AFFINE_MAILER_USER=admin@example.com
AFFINE_MAILER_PASS=changeme
AFFINE_MAILER_SENDER=admin@example.com
