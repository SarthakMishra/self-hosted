# n8n Workflow Automation Configuration

# === DOMAIN ===
N8N_DOMAIN=n8n.example.com
N8N_TIMEZONE=UTC

# === DATABASE ===
# Options: sqlite, postgresdb
N8N_DB_TYPE=sqlite

# PostgreSQL (if using postgresdb)
# N8N_DB_HOST=postgres
# N8N_DB_PORT=5432
# N8N_DB_NAME=n8n
# N8N_DB_USER=n8n
# N8N_DB_PASSWORD=changeme

# === SECURITY ===
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# === EMAIL (OPTIONAL) ===
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.example.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=admin@example.com
N8N_SMTP_PASS=changeme
N8N_SMTP_SENDER=admin@example.com

# === EXECUTION ===
# Options: main, own
N8N_EXECUTIONS_PROCESS=main
N8N_EXECUTIONS_TIMEOUT=3600
N8N_EXECUTIONS_TIMEOUT_MAX=7200

# === LOCALIZATION ===
N8N_DEFAULT_LOCALE=en
N8N_PERSONALIZATION_ENABLED=true
