# Step CA Configuration
# Copy this file to .env and update with your actual values

# Step CA Identity Configuration
STEP_CA_NAME=Home Server CA
STEP_CA_PROVISIONER_NAME=admin@homeserver.local

# DNS Names and IPs for the CA server
# step-ca: for nginx-proxy internal Docker network communication
# ca.home: for external access via nginx-proxy web interface
# localhost: for local container access
# IP: for direct network access
STEP_CA_DNS_NAMES=ca.home,step-ca,localhost,192.168.1.100

# Network Configuration  
# Your home server's local IP address
HOME_SERVER_IP=192.168.1.100

# Certificate Configuration
# Default certificate duration (hours) - 720h = 30 days, 2160h = 90 days
DEFAULT_CERT_DURATION=720h
MAX_CERT_DURATION=8760h

# ACME Configuration
ACME_PROVISIONER_NAME=acme
ACME_EMAIL=admin@homeserver.local 