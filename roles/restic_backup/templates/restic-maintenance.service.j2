[Unit]
Description=Restic Repository Maintenance
After=restic-backup.service

[Service]
Type=oneshot
User=root
WorkingDirectory={{ restic_backup_root }}
EnvironmentFile={{ restic_backup_root }}/config/restic-env
ExecStart={{ restic_backup_root }}/scripts/prune.sh
StandardOutput=journal
StandardError=journal
TimeoutStartSec=7200
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths={{ restic_backup_root }}
ProtectHome=true
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target 