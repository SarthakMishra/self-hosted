# SearxNG Configuration
# Copy this file to .env and update the values

# SearxNG Secret Key - Generate a secure random string
SEARXNG_SECRET_KEY=your-secret-key-here

# Base URL for SearxNG instance
SEARXNG_BASE_URL=http://search.local

# Redis Configuration
REDIS_URL=redis://searxng_redis:6379/0

# Limiter Settings (set to true for public instances)
ENABLE_LIMITER=false

# Image Proxy (recommended for privacy)
ENABLE_IMAGE_PROXY=true

# Optional: Custom instance name
SEARXNG_INSTANCE_NAME=SearxNG Local
