# {{ ansible_managed }}
# Nginx Proxy Environment Configuration
# Generated by Ansible nginx_proxy role

# Domain Configuration
DEFAULT_HOST={{ default_host }}
DOMAIN_SUFFIX={{ domain_suffix }}

# Network Configuration
NGINX_PROXY_NETWORK={{ nginx_proxy_network_name }}

# SSL Configuration (disabled for local .home domains)
HTTPS_METHOD=noredirect
TRUST_DOWNSTREAM_PROXY=true

# Custom Configuration
NGINX_CLIENT_MAX_BODY_SIZE={{ nginx_proxy_client_max_body_size }}
NGINX_PROXY_READ_TIMEOUT={{ nginx_proxy_proxy_read_timeout }}
NGINX_PROXY_SEND_TIMEOUT={{ nginx_proxy_proxy_send_timeout }} 