# {{ ansible_managed }}
# Docker Swarm Environment Configuration
# Generated by Ansible docker_production role

{% for key, value in docker_environment.items() %}
{{ key }}={{ value }}
{% endfor %}

# Server Configuration
SERVER_IP={{ ansible_default_ipv4.address }}
DOMAIN={{ domain_name | default('your-domain.com') }}
EMAIL={{ admin_email | default('admin@your-domain.com') }}

# Tailscale Configuration (if available)
{% if tailscale_ip is defined %}
TAILSCALE_IP={{ tailscale_ip }}
{% endif %}
{% if tailscale_hostname is defined %}
TAILSCALE_HOSTNAME={{ tailscale_hostname }}
{% endif %}

# Node Configuration
NODE_TYPE={{ node_type | default('server') }}
NGINX_PROXY_ENABLED={{ nginx_proxy_enabled | default(true) }}

# Update these values before deploying production services 