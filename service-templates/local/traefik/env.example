# Traefik (Local) Configuration

# === DOMAIN ===
HOME_DOMAIN=local.example.com
TRAEFIK_DASHBOARD_DOMAIN=traefik.local.example.com

# === NETWORK ===
TRAEFIK_LOCAL_IP=192.168.1.x

# === LETSENCRYPT ===
LETSENCRYPT_EMAIL=admin@example.com

# === CLOUDFLARE ===
CLOUDFLARE_EMAIL=admin@example.com
CLOUDFLARE_API_KEY=changeme

# === DASHBOARD ===
# Generate with: htpasswd -n admin
TRAEFIK_DASHBOARD_AUTH=admin:changeme
TRAEFIK_DEBUG=false
TRAEFIK_API_INSECURE=false

# === LOGGING ===
# Options: DEBUG, INFO, WARN, ERROR
TRAEFIK_LOG_LEVEL=INFO
